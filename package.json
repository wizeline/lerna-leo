    "lerna": "^3.15.0",
    "lerna-semantic-release": "9.1.0",
    "semantic-release": "15.13.16",
    "typescript": "3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
