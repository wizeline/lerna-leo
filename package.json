{
  "name": "root",
  "private": true,
  "devDependencies": {
    "cz-lerna-changelog": "2.0.2",
    "husky": "2.4.1",
    "lerna": "^3.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "scripts": {
    "cz": "git-cz"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  }
}
