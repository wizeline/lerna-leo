{
  "name": "@wizeline/lerna-leo",
  "private": false,
  "devDependencies": {
    "@semantic-release/changelog": "3.0.1",
    "@semantic-release/git": "7.0.5",
    "cz-lerna-changelog": "2.0.2",
    "husky": "2.4.1",
    "lerna": "^3.15.0",
    "lerna-semantic-release": "9.1.0",
    "commitizen": "3.1.1",
    "semantic-release-conventional-commits": "2.0.1",
    "typescript": "3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "scripts": {
    "test": "echo test root",
    "commit": "npx git-cz",
    "postinstall": "lerna bootstrap",
    "bootstrap": "lerna bootstrap",
    "publish:master": "lerna publish --conventional-commits --cd-version=prerelease --yes --independent --npm-tag=unstable --preid=unstable --message 'chore(release): Publish [ci skip]' --exact",
    "publish:beta": "lerna publish --conventional-commits --cd-version=prerelease --yes  --npm-tag=beta --preid=beta --message 'chore(release): Publish [ci skip]' --exact",
    "publish:release": "lerna publish --conventional-commits --yes  --message 'chore(release): Publish version [ci skip]'"
  },
  "version": "0.3.8",
  "repository": {
    "type": "git",
    "url": "https://github.com/wizeline/lerna-leo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "[![lerna](https://img.shields.io/badge/maintained%20with-lerna-cc00ff.svg)](https://lerna.js.org/) [![Commitizen friendly](https://img.shields.io/badge/commitizen-friendly-brightgreen.svg)](http://commitizen.github.io/cz-cli/)",
  "bugs": {
    "url": "https://github.com/wizeline/lerna-leo/issues"
  },
  "homepage": "https://github.com/wizeline/lerna-leo#readme",
  "main": "index.js",
  "keywords": [
    "lerning",
    "leo"
  ],
  "author": "Leo Urzua <d.leonardo.urzua@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ]
}
